#!/bin/bash

MODE=${1-patch}

NEXT_VERSION=$(MIX_QUIET=1 mix version.next $MODE)
MIX_QUIET=1 mix version.inc $MODE
NEW_VERSION=$(MIX_QUIET=1 mix version.current)

if [ "${NEW_VERSION}" != "${NEXT_VERSION}" ]; then
  echo "Unable to update version, stopping script"
  exit 1
fi

(git add mix.exs README.md && \
 git commit -m "v${NEW_VERSION}")
